<body style="background-color: rgb(202, 202, 202);">
  <main class="d-flex flex-column align-items-center"> 
    <div class="d-flex flex-column align-items-center col-9 p-4 mt-5 rounded" style="background-color: rgb(136, 150, 192);">
      <h1 class="m-1 text-center text-white">Cadastro de Questões</h1>
      <form action="/cadastrar" enctype="multipart/form-data" method="POST" class=" bg-dark mt-2 p-2 rounded ">
      
      <div class="d-flex">

        <div class="form-group w-25 m-2">
          <label for="exampleInputPassword1" class="text-white">Ensino</label>
          <input
            type="text"
            name="elementarySchool"
            class="form-control"
            id="exampleInputPassword1"
            required
          />
        </div>
        <div class="form-group w-25 m-2">
          <label for="exampleInputPassword1" class="text-white">Ano Escolar</label>
          <input
            type="text"
            name="schoolYear"
            class="form-control"
            id="exampleInputPassword1"
            required
          />
        </div>
        <div class="form-group w-25 m-2 ">
        <label for="exampleInputPassword1" class="text-white">Disciplina</label>
        <input
          type="text"
          name="displice"
          class="form-control"
          id="exampleInputPassword1"
          required
        />
        </div>
        <div class="form-group w-25 m-2">
          <label for="exampleInputPassword1" class="text-white">Assunto</label>
          <input
            type="text"
            name="subject"
            class="form-control"
            id="exampleInputPassword1"
            required
          />
        </div>
        </div>

    <div class="d-flex bg-dark rounded mt-2">
      </div>
      <div class="d-flex">
        <div class="form-group w-50 m-2">
            <label for="exampleFormControlTextarea1" class="text-white" >Pergunta</label>
            <textarea class="form-control" id="pergunta" name="question" required  rows="3"></textarea>
          </div>
          <div class="form-group w-50 m-2">
            <label for="exampleFormControlTextarea1" class="text-white" >Resposta</label>
            <textarea class="form-control" id="resposta" name="answer" required rows="3"></textarea>
          </div>
    </div>
      <div class="m-2">
        <div class="form-group">
            <label for="exampleInputPassword1" class="text-white" >Alternativa A</label>
            <input
              type="text"
              name="altA"
              class="form-control"
              id="exampleInputPassword1"
              required
            />
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1" class="text-white">Alternativa B</label>
            <input
              type="text"
              name="altB"
              class="form-control"
              id="exampleInputPassword1"
              required
            />
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1" class="text-white">Alternativa C</label>
            <input
              type="text"
              name="altC"
              class="form-control"
              id="exampleInputPassword1"
              required
            />
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1" class="text-white">Alternativa D</label>
            <input
              type="text"
              name="altD"
              class="form-control"
              id="exampleInputPassword1"
              required
            />
          </div>
